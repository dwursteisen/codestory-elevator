# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index


# /v3/reset?lowerFloor=0&higherFloor=19&cabinSize=42&cause=can%27t+go+down+because+current+floor+is+the+lowest+floor HTTP/1.1" 200 0 "-"

GET     /v3/nextCommand                controllers.ApplicationV3.nextCommand
GET     /v3/call                       controllers.ApplicationV3.call(atFloor: Int, to: String)
GET     /v3/go                         controllers.ApplicationV3.go(floorToGo: Int)
GET     /v3/reset                      controllers.ApplicationV3.reset(cause: String, higherFloor: Int, lowerFloor: Int, cabinSize: Int)
GET     /v3/userHasEntered             controllers.ApplicationV3.userEntering
GET     /v3/userHasExited              controllers.ApplicationV3.userExiting

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
