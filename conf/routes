# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /nextCommand                controllers.Application.nextCommand
GET     /call                       controllers.Application.call(atFloor: Int, to: String)
GET     /go                         controllers.Application.go(floorToGo: Int)
GET     /reset                      controllers.Application.reset(cause: String)
GET     /userHasEntered             controllers.Application.userEntering
GET     /userHasExited              controllers.Application.userExiting

GET     /v1/nextCommand                controllers.Application.nextCommand
GET     /v1/call                       controllers.Application.call(atFloor: Int, to: String)
GET     /v1/go                         controllers.Application.go(floorToGo: Int)
GET     /v1/reset                      controllers.Application.reset(cause: String)
GET     /v1/userHasEntered             controllers.Application.userEntering
GET     /v1/userHasExited              controllers.Application.userExiting

GET     /v2/nextCommand                controllers.ApplicationV2.nextCommand
GET     /v2/call                       controllers.ApplicationV2.call(atFloor: Int, to: String)
GET     /v2/go                         controllers.ApplicationV2.go(floorToGo: Int)
GET     /v2/reset                      controllers.ApplicationV2.reset(cause: String)
GET     /v2/userHasEntered             controllers.ApplicationV2.userEntering
GET     /v2/userHasExited              controllers.ApplicationV2.userExiting

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
